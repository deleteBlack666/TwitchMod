<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_height="wrap_content" android:layout_width="wrap_content" android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TimePicker
        android:layout_gravity="center"
        android:id="@+id/mod_time_picker__time_picker"
        android:layout_width="wrap_content"
        android:minWidth="200dp"
        android:layout_height="wrap_content"
        android:timePickerMode="spinner" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/mod_time_picker__ok"
            android:layout_margin="@dimen/default_margin_double"
            style="@style/ButtonStyle.Primary"
            android:minWidth="@dimen/button_min_width"
            android:layout_alignParentEnd="true"
            android:text="@android:string/ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/mod_time_picker__cancel"
            android:layout_margin="@dimen/default_margin_double"
            style="@style/ButtonStyle"
            android:minWidth="@dimen/button_min_width"
            android:layout_alignParentStart="true"
            android:text="@android:string/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</LinearLayout>